<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Camp name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Camp image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Camp description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" min="0.01" step="0.01" placeholder="Camp price">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
    
<% include ../partials/footer %>